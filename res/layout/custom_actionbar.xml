<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageButton
        android:id="@+id/btn_show_tag_list"
        style="@style/action_button_style"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/str_action_button"
        android:src="@drawable/database" />

    <ImageButton
        android:id="@+id/btn_get_current_position"
        style="@style/action_button_style"
        android:layout_toRightOf="@+id/btn_show_tag_list"
        android:contentDescription="@string/str_action_button"
        android:src="@drawable/gps" />

    <ImageButton
        android:id="@+id/btn_tag_current_position"
        style="@style/action_button_style"
        android:layout_toRightOf="@+id/btn_get_current_position"
        android:contentDescription="@string/str_action_button"
        android:src="@drawable/tag_icon" />

    <TextView
        android:id="@+id/actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#DC381F"
        android:textSize="20sp" />

</RelativeLayout>